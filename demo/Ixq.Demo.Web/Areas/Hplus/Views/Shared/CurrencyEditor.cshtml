@model IPropertyEditModel
<div class="form-group">
    <label class="col-sm-3 control-label">@Model.RuntimeProperty.Name：</label>
    <div class="col-sm-8">
        <input name="@Model.RuntimeProperty.PropertyInfo.Name" type="number" class="form-control" 
            step="@Model.RuntimeProperty.Step"
            @Html.Raw(Model.RuntimeProperty.Min != 0 ? Model.RuntimeProperty.Min.ToString() : "")
            @Html.Raw(Model.RuntimeProperty.Max != 0 ? Model.RuntimeProperty.Max.ToString() : "")
            @Html.Raw(Model.RuntimeProperty.IsRequired ? "required=\"\"" : "")>
    </div>
</div>
